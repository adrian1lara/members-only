<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  </head>
  <body>
    <% if(user) { %>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">Members Only</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse"  
          data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" 
          aria-expanded="false" aria-label="Toggle navigation" id="navbarToggleBtn">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="#">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-primary" target='_blank' href="https://github.com/adrian1lara/members-only/blob/main/README.md">How to Become a Member</a>
            </li>
          </ul>
          <div class="d-flex"> 
            <a href="/log-out" class="btn btn-outline-success">log out</a>
          </div>
        </div>
      </div>
    </nav>
    <div class="container">
      <div class="container-lg py-5">
      <h2 class='text-center'>Messages</h2>
      <a href='/message' class="btn btn-outline-primary">write your message</a>
      </div>
        <div >
        <%messages.forEach(function(message) { %>
        
          <div class="card w-100 p-2">
          <h5 class="card-header"><%=message.title%></h5>
          <div class="card-body">
            <p class="card-text"><%=message.message%></p>
            
          </div> 
          <div class="card-footer">
            <% if(user.membership === "member") { %>
            <p>Creator: <%= message.user.name %> <%= message.user.lastname %></p>

            <p><%=message.formatDate%></p>

            <% } else { %>
            <p>If you want to see who wrote this become a <a href="<%=user.url%>/member" class="text-warning">member</a> </p>
            <%} %>
          </div>
          </div>
          
        
        <%})%>

      </div>
    </div>
    <% } else { %>
      <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">Members Only</a>
        <button 
          class="navbar-toggler" type="button" data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation" id="navbarToggleBtn">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="#">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-primary" target='_blank' href="https://github.com/adrian1lara/members-only/blob/main/README.md">How to Become a Member</a>
            </li>
          </ul>
          <div class="d-flex">
            <a href="/log-in" class="btn btn-outline-success">Login</a>
            <a href="/sign-up" class="btn btn-outline-success ms-2">sign-up</a>
          </div>
        </div>
      </div>
    </nav>
    <div class="container">
      <div class="container-lg py-5">
        <h2>Messages</h2>
        <p class="text-success">Get logged to write your message</p>
      </div>
      
      <div>
        <%messages.forEach(function(message) { %>
        <div class="card w-100 p-2">
          <h5 class="card-header"><%=message.title%></h5>
          <div class="card-body"> 
            <p><%=message.message%></p>
          </div>
          <div class="card-footer">
            <p>Login to become a member and see who wrote this!</p>
          </div>                 
        </div>
        <%})%>
      </div>
    </div>
    <% } %>

    <script src="/javascripts/dom.js"> 
    </script>
      </body>
</html>
